%h1 Sign Up

= form_for @user, url: {action: "create"} do |f|
  %p
    = f.label :email
    = f.email_field :email
  %p
    = f.label :password
    = f.password_field :password
  %p
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  %p
    = f.button :submit
    = submit_tag 'Cancel', type: 'reset'
